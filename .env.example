# Configuração de ambiente
ENVIRONMENT=development

# Paths de dados
DATA_PATH=data/raw
OUTPUT_PATH=submissions

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=retail_forecasting

# Configurações de memória
MAX_MEMORY_GB=16
CHUNK_SIZE=100000

# Configurações de modelo
DEFAULT_MODEL=lightgbm
ENSEMBLE_STRATEGY=meta_ensemble

# Configurações de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configurações de desenvolvimento
DEBUG=True
TESTING=False

# Configurações de banco de dados (se aplicável)
# DATABASE_URL=sqlite:///forecasting.db

# Configurações de API (se aplicável)
# API_HOST=localhost
# API_PORT=8000
