# Phase 6: Environment Variables Template
# Copy this file to .env and adjust values for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
FORECAST_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=forecast_db
POSTGRES_USER=forecast_user
POSTGRES_PASSWORD=forecast_password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=hackathon_forecast_2025
MLFLOW_ARTIFACT_ROOT=./mlruns

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key
JUPYTER_TOKEN=hackathon2025

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=alerts@yourcompany.com
EMAIL_TO=team@yourcompany.com

# Slack Configuration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#forecasting-alerts

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Data paths
DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
MODELS_PATH=models/trained
SUBMISSIONS_PATH=submissions

# Performance settings
MAX_WORKERS=4
MEMORY_LIMIT_GB=8
ENABLE_GPU=false
GPU_MEMORY_FRACTION=0.8

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_MONITORING=true
METRICS_COLLECTION_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Alert thresholds
WMAPE_THRESHOLD=0.20
MEMORY_THRESHOLD=0.80
ERROR_RATE_THRESHOLD=0.05
RESPONSE_TIME_THRESHOLD=30.0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
SAMPLE_DATA_SIZE=100000
FAST_MODE=true

# =============================================================================
# DOCKER BUILD SETTINGS
# =============================================================================
BUILD_DATE=2025-01-15
VCS_REF=main
IMAGE_TAG=latest

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
LOG_FILE_PATH=logs/application.log
MAX_LOG_FILE_SIZE_MB=100
LOG_BACKUP_COUNT=5

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_PHASE5_MODELS=true
ENABLE_BAYESIAN_CALIBRATION=true
ENABLE_BUSINESS_RULES=true
ENABLE_REAL_TIME_INFERENCE=false
ENABLE_MODEL_EXPLANABILITY=true
ENABLE_DRIFT_DETECTION=true
ENABLE_ADVANCED_ENSEMBLE=true

# =============================================================================
# CLOUD CONFIGURATION (if using cloud services)
# =============================================================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-west-2
# AWS_S3_BUCKET=your-forecast-bucket

# AZURE_STORAGE_ACCOUNT=your-storage-account
# AZURE_STORAGE_KEY=your-storage-key
# AZURE_CONTAINER_NAME=your-container

# GCP_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Time series validation
CV_STRATEGY=time_series_split
CV_FOLDS=5
WALK_FORWARD_WINDOW=252
WALK_FORWARD_STEP=30

# Business rules
MIN_FORECAST_VALUE=0.0
MAX_GROWTH_RATE=2.0
ENABLE_NON_NEGATIVITY=true
ENABLE_SEASONALITY_CONSTRAINTS=true

# Performance monitoring
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=profiles/
ENABLE_MEMORY_MONITORING=true